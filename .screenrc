
# Tell all termcaps that they can add to the term's scroll buffer too
termcapinfo * ti@:te@

# UTF-8 goodness!
defc1 off
defutf8 on

# Bigger scroll buffer
defscrollback 10000

# Ditch the annoying startup message
startup_message off

# Turn the vbell off
# We'll let the terminal deal with it.
vbell off

# Remove the xoff keybinding, it is nothing but pain
bind s
bind ^s

# Fix n900 enter key
bindkey -k -a fe stuff ^M
bindkey -k fe stuff ^M

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
#  attrcolor b ".I"
#  # tell screen how to set colors. AB = background, AF=foreground
#  termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#  # erase background with current bg color
#  defbce "on"

# Make all of our windows
screen 0
screen 1
screen 2
screen 3
screen 4
screen 5
screen 6
screen 7
screen 8
screen 9

# Allow switching using symbols
bind ! select 1
bind @ select 2
bind \# select 3
bind $ select 4
bind % select 5                                                      
bind \^ select 6                                                     
bind & select 7
bind * select 8
bind ( select 9
bind ) select 0

